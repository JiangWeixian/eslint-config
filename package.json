{
  "name": "@aiou/eslint-config-monorepo",
  "version": "1.0.0",
  "description": "monorepo for aiou templates",
  "private": true,
  "packageManager": "pnpm@7.12.2",
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test:ignore": "eslint . --config=./packages/default/index.js",
    "test:react": "eslint test --config=./packages/react/index.js",
    "build": "pnpm --filter=./packages/analyze --filter=./packages/ignore build",
    "ci:version": "pnpm changeset version",
    "ci:publish": "pnpm run build && pnpm changeset publish",
    "ci:snapshot": "pnpm changeset version --snapshot beta",
    "ci:prerelease": "pnpm run build && pnpm changeset publish --tag beta",
    "prepare": "husky install"
  },
  "lint-staged": {
    "**/**/*.{js,ts,tsx,vue,json}": ["eslint --fix"]
  },
  "dependencies": {
    "typescript": "^4.8.4"
  },
  "devDependencies": {
    "@aiou/eslint-config": "workspace:*",
    "@aiou/eslint-plugin-progress": "workspace:*",
    "@changesets/cli": "^2.25.2",
    "cz-emoji": "^1.3.1",
    "eslint": "^8.26.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.5.0"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-emoji"
    }
  }
}
