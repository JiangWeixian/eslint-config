{
  "name": "@aiou/eslint-config-monorepo",
  "version": "1.0.0",
  "description": "monorepo for aiou templates",
  "private": true,
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test:ignore": "eslint . --config=./packages/default/index.js",
    "test:react": "eslint test --config=./packages/react/index.js",
    "build": "pnpm build --filter=./packages/analyze",
    "ci:version": "pnpm changeset version",
    "ci:publish": "pnpm run build && pnpm changeset publish",
    "ci:snapshot": "pnpx changeset version --snapshot beta",
    "ci:prerelease": "pnpm run build && pnpx changeset publish --tag beta",
    "prepare": "husky install"
  },
  "lint-staged": {
    "**/**/*.{js,ts,tsx,vue,json}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "typescript": "^4.4.4"
  },
  "devDependencies": {
    "@aiou/eslint-config": "workspace:*",
    "@aiou/eslint-plugin-progress": "workspace:*",
    "@changesets/cli": "^2.17.0",
    "cz-emoji": "^1.3.1",
    "eslint": "^7.32.0",
    "eslint-plugin-prettier": "^3.4.1",
    "husky": "^7.0.4",
    "lint-staged": "^11.2.4",
    "prettier": "^2.4.1"
  },
  "config": {
    "commitizen": {
      "path": "cz-emoji"
    }
  }
}
