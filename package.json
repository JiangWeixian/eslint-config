{
  "name": "@aiou/eslint-config-monorepo",
  "description": "monorepo for aiou templates",
  "private": true,
  "scripts": {
    "lint": "eslint .",
    "test:ignore": "eslint . --config=./packages/defaut/index.js",
    "test:react": "eslint test --config=./packages/react/index.js",
    "changelog": "gitmoji-changelog",
    "bootstrap": "lerna bootstrap",
    "release": "lerna publish --force-publish --yes"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/**/*.{js}": "eslint --fix"
  },
  "dependencies": {
    "@aiou/eslint-config": "^0.0.27",
    "eslint": "^7.25.0",
    "typescript": "^4.2.4"
  },
  "devDependencies": {
    "@changesets/cli": "^2.16.0",
    "cz-emoji": "^1.3.1",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "3.x",
    "lint-staged": "^11.0.1",
    "prettier": "^2.3.2"
  },
  "config": {
    "commitizen": {
      "path": "cz-emoji"
    }
  }
}
