{
  "name": "@aiou/eslint-config-monorepo",
  "description": "monorepo for aiou templates",
  "private": true,
  "scripts": {
    "lint": "eslint .",
    "changelog": "gitmoji-changelog",
    "bootstrap": "lerna bootstrap",
    "release": "lerna publish --force-publish --yes"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/**/*.{js}": "eslint --fix"
  },
  "dependencies": {
    "@aiou/eslint-config": "^0.0.10",
    "eslint": "^7.25.0",
    "typescript": "^4.2.4"
  },
  "devDependencies": {
    "cz-emoji": "^1.3.1",
    "husky": "3.x",
    "lerna": "^4.0.0",
    "lint-staged": "^11.0.1"
  },
  "config": {
    "commitizen": {
      "path": "cz-emoji"
    }
  }
}
