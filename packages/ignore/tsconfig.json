{
  "compilerOptions": {
    "target": "ES5",
    "experimentalDecorators": true,
    "baseUrl": "./",
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "declaration": true,
    "importHelpers": true,
    "outDir": "lib",
    "sourceMap": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
